{
  "root": "packages/cli",
  "sourceRoot": "packages/cli/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/cli",
        "main": "packages/cli/src/index.ts",
        "tsConfig": "packages/cli/tsconfig.lib.json",
        "assets": ["packages/cli/*.md", "packages/cli/src/cli.js"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/cli"],
      "options": {
        "jestConfig": "packages/cli/jest.config.js",
        "passWithNoTests": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ],
      "options": {
        "postTargets": ["cli:npm", "cli:github"]
        "commitMessageFormat": "release(${projectName}): ${version}",
        "noVerify": true,
        "push": true
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notesFile": "./packages/cli/CHANGELOG.md"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "link": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "cd ./dist/packages/cli"
          },
          {
            "command": "npm link -f"
          }
        ]
      }
    },
    "release": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "nx version cli"
      }
    }
  },
  "tags": []
}
